---
import "../styles/global.css";

const links = {
  github: "https://github.com/CrissCCL",
  youtube: "https://www.youtube.com/@CrissCCL_eng",
  linkedin: "https://www.linkedin.com/in/cristianccl/",
};

const projects = [

  {
    title: "DIY UAV — Fly-by-Wire Testbed",
    thumb: "/img/uav.jpg",
    desc: "Complete embedded flight-control platform with sensing, actuation and custom PCBs.",
    impact: "End-to-end UAV platform for real-time control experimentation and validation.",
    highlights: [
      "Dual-IMU architecture with failover and fusion",
      "Real-time control loops and telemetry pipeline",
      "Custom KiCad PCBs for flight control and power stage"
    ],
    tags: [
      { name: "Embedded", icon: "devicon-cplusplus-plain" },
      { name: "Control" }
    ],
    url: "https://github.com/CrissCCL/DIY_UAV",
  },

  {
    title: "Temperature Control Module",
    thumb: "/img/temp.png",
    desc: "Real-time process control with GUI and instrumentation.",
    impact: "Industrial-style thermal platform for control tuning and experimentation.",
    highlights: [
      "Digital PID/PI controllers",
      "Live GUI + telemetry logging",
      "Closed-loop validation tests"
    ],
    tags: [
      { name: "Embedded", icon: "devicon-cplusplus-plain" },
      { name: "Control" }
    ],
    url: "https://github.com/CrissCCL/Temp_ControlMod",
  },

  {
    title: "ROS 2 Humble Integration",
    thumb: "/img/ros.png",
    desc: "Telemetry bridge using Raspberry Pi + ROS 2.",
    impact: "Embedded-to-ROS communication layer for robotics experiments.",
    highlights: [
      "UART real-time bridge",
      "ROS 2 nodes for streaming and logging",
      "Field deployment on Raspberry Pi"
    ],
    tags: [
      { name: "ROS2" },
      { name: "Linux", icon: "devicon-linux-plain" },
      { name: "Python", icon: "devicon-python-plain" }
    ],
    url: "https://github.com/CrissCCL/Temp_ControlMod_ROS_integration",
  },

  {
    title: "UAV Power Stage PCB",
    thumb: "/img/power.JPG",
    desc: "Custom power electronics and regulation board.",
    impact: "Reliable modular power architecture for UAV electronics.",
    highlights: [
      "High-side smart switching protection",
      "Buck regulation for avionics",
      "EMI-aware PCB layout"
    ],
    tags: [
      { name: "KiCad" },
      { name: "PCB" }
    ],
    url: "https://github.com/CrissCCL/UAV_PowerStage",
  },

  {
    title: "Digital Control & ARX Identification",
    thumb: "/img/arx.png",
    desc: "System modeling and control design in MATLAB.",
    impact: "Data-driven workflow for plant identification and controller tuning.",
    highlights: [
      "ARX/ARMAX modeling",
      "PI/PID tuning",
      "Simulation-to-experiment validation"
    ],
    tags: [
      { name: "MATLAB" },
      { name: "Python", icon: "devicon-python-plain" }
    ],
    url: "https://github.com/CrissCCL/Digital_ControlSimARX",
  },

  {
    title: "Flotation Column Control — LabVIEW HMI",
    thumb: "/img/flotation.png",
    desc: "Industrial SCADA-style interface and MIMO PID control.",
    impact: "Supervisory control system for pilot-scale mineral processing.",
    highlights: [
      "Decoupled MIMO PID",
      "LabVIEW HMI",
      "Industrial DAQ integration"
    ],
    tags: [
      { name: "LabVIEW" }
    ],
    url: "https://github.com/CrissCCL/FLotation_Column_control_HMI",
  }

];


---

<html lang="es">
  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CrissCCL — Portfolio</title>

    <meta
      name="description"
      content="Embedded control systems, industrial instrumentation, firmware development, PCB design, ROS2 integration and real-time automation platforms. End-to-end engineering from hardware to software."
    />
    <meta property="og:title" content="CrissCCL — Control & Instrumentation Engineer" />
    <meta
      property="og:description"
      content="Embedded systems, industrial automation, control engineering and custom PCB design projects."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://crissccl.github.io/" />
  </head>

  <body>
    <header class="hero">
      <div class="wrap">
        <p class="kicker">CrissCCL</p>
            <h1>Embedded Control & Instrumentation Engineer</h1>
            <p class="lead">
            Building real-world hardware, firmware and automation platforms.
            </p>


        <div class="cta">
          <a class="btn" href="#projects">Explore projects</a>
          <a class="btn ghost" href={links.github} target="_blank" rel="noreferrer">GitHub</a>
          <a class="btn ghost" href={links.youtube} target="_blank" rel="noreferrer">YouTube</a>
          <a class="btn ghost" href={links.linkedin} target="_blank" rel="noreferrer">LinkedIn</a>
        </div>
        <div class="heroStack">
        <span>Control Systems</span>
        <span>Embedded C/C++</span>
        <span>ROS 2</span>
        <span>PCB Design</span>
        <span>MATLAB</span>
        <span>Python</span>
      </div>
      </div>
    </header>

   </section>
   <main class="wrap">
      <section id="projects">
        <div class="sectionHead">
          <h2>Featured Projects</h2>
        </div>

        <div class="grid">
          {projects.map((p) => (
            <a class="card" href={p.url} target="_blank" rel="noreferrer">
              {p.thumb && (
                <div class="thumbWrap">
                  <img class="thumb" src={p.thumb} />

                  <div class="overlay">
                    View Project →
                  </div>
                </div>

              )}

              <div class="cardTop">
                <div class="dot" aria-hidden="true"></div>
                <h3>{p.title}</h3>
              </div>

              <p class="muted">{p.desc}</p>
              <p class="impact">{p.impact}</p>

              <ul class="bullets">
                {p.highlights?.map((h) => <li>{h}</li>)}
              </ul>

              <div class="tags">
                {p.tags.map((t) => (
                  <span class="tag">
                    {t.icon && <i class={t.icon}></i>}
                    {t.name}
                  </span>
                ))}
              </div>

              <div class="cardBottom">
                <span class="link">View on GitHub →</span>
              </div>
            </a>
          ))}
        </div>
      </section>

      <section id="contact">
        <div class="sectionHead">
          <h2>Contact</h2>
        </div>

        <div class="contact">
          <a href={links.linkedin} target="_blank" rel="noreferrer">LinkedIn</a>
          <a href={links.github} target="_blank" rel="noreferrer">GitHub</a>
          <a href={links.youtube} target="_blank" rel="noreferrer">YouTube</a>
        </div>
      </section>

      <footer class="footer">
        <p class="muted">© {new Date().getFullYear()} CrissCCL</p>
      </footer>
    </main>
  </body>
</html>
