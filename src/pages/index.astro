---
import "../styles/global.css";

const links = {
  github: "https://github.com/CrissCCL",
  youtube: "https://www.youtube.com/@CrissCCL_eng",
  linkedin: "https://www.linkedin.com/in/cristianccl/",
};

const projects = [

  {
    title: "DIY UAV — Fly-by-Wire Testbed",
    desc: "Complete embedded flight-control platform with sensing, actuation and custom PCBs.",
    impact: "End-to-end UAV platform for real-time control experimentation and validation.",
    highlights: [
      "Dual-IMU architecture with sensor failover and fusion",
      "Real-time control loops and telemetry pipeline",
      "Custom KiCad PCBs for flight control and power distribution"
    ],
    tags: [
      { name: "Embedded", icon: "devicon-cplusplus-plain" },
      { name: "Teensy" },
      { name: "Control" }
    ],
    url: "https://github.com/CrissCCL/DIY_UAV",
  },

  {
    title: "Temperature Control Module",
    desc: "Real-time process control with GUI and instrumentation.",
    impact: "Industrial-style thermal process platform for control tuning and experimentation.",
    highlights: [
      "PID/PI digital controllers implemented on embedded hardware",
      "Live GUI visualization + logging + serial telemetry",
      "End-to-end system identification and closed-loop validation"
    ],
    tags: [
      { name: "Python", icon: "devicon-python-plain" },
      { name: "Arduino", icon: "devicon-arduino-plain" },
      { name: "Control" }
    ],
    url: "https://github.com/CrissCCL/Temp_ControlMod",
  },

  {
    title: "ROS 2 Humble Integration",
    desc: "Telemetry bridge using Raspberry Pi + ROS 2.",
    impact: "Edge-to-cloud communication layer between embedded controller and robotics framework.",
    highlights: [
      "UART bridge for real-time telemetry and commands",
      "ROS 2 nodes for streaming, logging and remote control",
      "Raspberry Pi deployment for field-ready operation"
    ],
    tags: [
      { name: "ROS2" },
      { name: "Python", icon: "devicon-python-plain" },
      { name: "Linux", icon: "devicon-linux-plain" }
    ],
    url: "https://github.com/CrissCCL/Temp_ControlMod_ROS_integration",
  },

  {
    title: "UAV Power Stage PCB",
    desc: "Custom power electronics and regulation board.",
    impact: "Modular power architecture improving reliability and electrical isolation in UAV systems.",
    highlights: [
      "High-side smart switching with BTS50005 protection",
      "Buck regulation for low-voltage electronics and sensors",
      "Custom KiCad design with EMI-aware layout and grounding"
    ],
    tags: [
      { name: "KiCad" },
      { name: "PCB" },
      { name: "Hardware" }
    ],
    url: "https://github.com/CrissCCL/UAV_PowerStage",
  },

  {
    title: "Digital Control & ARX Identification",
    desc: "System modeling and control design in MATLAB.",
    impact: "Industrial-style workflow for data-driven modeling and controller design.",
    highlights: [
      "ARX/ARMAX/BJ model identification from real plant data",
      "Closed-loop PI/PID tuning and robustness analysis",
      "Simulation-to-experiment validation pipeline"
    ],
    tags: [
      { name: "MATLAB" },
      { name: "System ID" }
    ],
    url: "https://github.com/CrissCCL/Digital_ControlSimARX",
  },

  {
    title: "Flotation Column Control — LabVIEW HMI",
    desc: "Industrial SCADA-style interface and MIMO PID control.",
    impact: "Supervisory control system for pilot-scale mineral processing experiments.",
    highlights: [
      "Decoupled MIMO PID control strategy",
      "LabVIEW HMI for monitoring, alarms and actuation",
      "Industrial-style data acquisition and supervision"
    ],
    tags: [
      { name: "LabVIEW" },
      { name: "PID" },
      { name: "Industrial" }
    ],
    url: "https://github.com/CrissCCL/FLotation_Column_control_HMI",
  }

];




---

<html lang="es">
  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CrissCCL — Portfolio</title>

    <meta
      name="description"
      content="Embedded control systems, industrial instrumentation, firmware development, PCB design, ROS2 integration and real-time automation platforms. End-to-end engineering from hardware to software."
    />
    <meta property="og:title" content="CrissCCL — Control & Instrumentation Engineer" />
    <meta
      property="og:description"
      content="Embedded systems, industrial automation, control engineering and custom PCB design projects."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://crissccl.github.io/" />
  </head>

  <body>
    <header class="hero">
      <div class="wrap">
        <p class="kicker">CrissCCL</p>
        <h1>Control · Instrumentation · Embedded Systems · Robotics</h1>
        <p class="lead">
          Real-world engineering projects combining control systems, custom PCBs, embedded firmware and industrial automation.
        </p>

        <div class="cta">
          <a class="btn" href="#projects">Explore projects</a>
          <a class="btn ghost" href={links.github} target="_blank" rel="noreferrer">GitHub</a>
          <a class="btn ghost" href={links.youtube} target="_blank" rel="noreferrer">YouTube</a>
          <a class="btn ghost" href={links.linkedin} target="_blank" rel="noreferrer">LinkedIn</a>
        </div>
        <div class="heroStack">
        <span>Control Systems</span>
        <span>Embedded C/C++</span>
        <span>ROS 2</span>
        <span>PCB Design</span>
        <span>MATLAB</span>
        <span>Python</span>
      </div>
      </div>
    </header>

    <section class="about wrap">
              <h2>Profile</h2>
        <p class="muted">
          Control and Instrumentation Engineer with 9+ years of experience in embedded systems,
          industrial automation, signal processing and hardware design. Specialized in real-world
          engineering solutions from PCB design to control implementation.
        </p>
    </section>
   <main class="wrap">
      <section id="projects">
        <div class="sectionHead">
          <h2>Featured Projects</h2>
        </div>

        <div class="grid">
          {projects.map((p) => (
            <a class="card" href={p.url} target="_blank" rel="noreferrer">
              <div class="cardTop">
                <div class="dot" aria-hidden="true"></div>
                <h3>{p.title}</h3>
              </div>

              <p class="muted">{p.desc}</p>
              <p class="impact">{p.impact}</p>

              <ul class="bullets">
                {p.highlights?.map((h) => <li>{h}</li>)}
              </ul>

              <div class="tags">
                {p.tags.map((t) => (
                  <span class="tag">
                    {t.icon && <i class={t.icon}></i>}
                    {t.name}
                  </span>
                ))}
              </div>

              <div class="cardBottom">
                <span class="link">View on GitHub →</span>
              </div>
            </a>
          ))}
        </div>
      </section>

      <section id="contact">
        <div class="sectionHead">
          <h2>Contact</h2>
        </div>

        <div class="contact">
          <a href={links.linkedin} target="_blank" rel="noreferrer">LinkedIn</a>
          <a href={links.github} target="_blank" rel="noreferrer">GitHub</a>
          <a href={links.youtube} target="_blank" rel="noreferrer">YouTube</a>
        </div>
      </section>

      <footer class="footer">
        <p class="muted">© {new Date().getFullYear()} CrissCCL</p>
      </footer>
    </main>
  </body>
</html>
